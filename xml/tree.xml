<thing name='tree'>
	<!-- make 'first parent' and '4th child' an alias for '1st item' in lists -->
	<alias for='list ordinal' with='parent'/>
	<alias for='list ordinal' with='child'/>

	<!-- ordinals for parents/children -->
	<ordinal name='parent ordinal' with='parent'/>
	<ordinal name='child ordinal' with='child'/>

	<group name='tree conditions'>
		<condition syntax='(tree) {has|have} children'/>
		<condition syntax='(tree) {does not have|do not have} children'/>
	
		<condition syntax='(tree) {is|am} [an] ancestor of (child)'/>
		<condition syntax='(tree) {is not|am not} [an] ancestor of (child)'/>
		<condition syntax='(tree) {is|am} [a] child of (parent)'/>
		<condition syntax='(tree) {is not|am not} [a] child of (parent)'/>
		<condition syntax='(tree) {is|am} [a] descendant of (parent)'/>
	</group>


	<!-- parents -->
	<property name='parent'/>
	<list name='parents' each='parent' alias='ancestors' save='no'/>
	<expression syntax='(parent ordinal) of (tree)'/>
	<expression syntax='parents of (tree) where (condition)'/>
	<expression syntax='[(parent ordinal)] of (tree) where (condition)'/>

	<!-- children -->
	<list name='children' each='child'/>
	<expression syntax='(child ordinal) of (tree)'/>
	<expression syntax='children of (tree) {where|which matches} (selector)'/>
	<expression syntax='[(child ordinal)] of (tree) {where|which matches} (selector)'/>

</thing>
