<mixin name='css transforms'>
	<!-- transforms currently applied -->
	<list name='transforms' each='tranform' type='css transform'/>

	<!-- calculated values for transforms as they are applied -->
	<expression syntax='origin' type='point'/>
	<expression syntax='angle' type='angle'/>
	<expression syntax='scale' type='point'/>
	<expression syntax='translation' type='point'/>
	<expression syntax='perspective' type='number'/>
	<expression syntax='{back is visible|backface visiblity}' type='define as:hidden or shown'/>

	<command name='rotate to (angle)'/>
	<command name='scale to (numeric dimension)'/>
	<command name='translate to (point)'/>
	<command name='show back'/>
	<command name='hide back'/>
</mixin>
