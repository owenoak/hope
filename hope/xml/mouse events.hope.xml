<mixin name='mouse events'>
	<event name='mousemove [{for|in} (part)]'/>
	<event name='mousenter [{for|in} (part)]'/>
	<event name='mousedown [{for|in} (part)]'/>
	<event name='mousestilldown [{for|in} (part)]'/>
	<event name='mouseup [{for|in} (part)]'/>
	<event name='click [{for|in} (part)]'/>
	<event name='double click [{for|in} (part)]'/>
	<event name='triple click [{for|in} (part)]'/>
	<event name='right click [{for|in} (part)]'/>
	<event name='hover [{for|in} (part)]'/>
	<event name='hover out [{for|in} (part)]'/>
	<event name='mouseleave [{for|in} (part)]'/>
</mixin>
